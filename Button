	public void move(int x,int y)
	{
		x1 = x;
		x2 = x1+this.getWidth();
		y1 = y;
		y2 = y1+this.getHeight();
	}
	public boolean inBounds(int x,int y)
	{
		return (x>=x1&&x<=x2&&y>=y1&&y<=y2);
	}
